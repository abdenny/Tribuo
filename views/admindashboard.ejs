<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/style/registration.css" />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <div class="container">
      <form id="form" class="form" action="/admin/department" method="POST">
        <h2>Create a Department</h2>

        <div class="form-control">
          <label for="department">Department Name</label>
          <input
            type="text"
            id="department"
            name="department"
            placeholder="Enter a department to create"
          />
        </div>

        <button value="submit" type="submit">Submit</button>
      </form>
    </div>
    <div class="container">
      <form id="form" class="form" action="/admin/managers" method="POST">
        <h2>Create a Manager</h2>

        <div class="form-control">
          <label for="department">Employee Email Address</label>
          <input
            type="text"
            id="emp_email"
            name="emp_email"
            placeholder="Enter an employees email adress from existing users"
          />
        </div>
        <div class="form-control">
          <label for="department_managers">Department </label>
          <select
            id="department_managers"
            name="department_id"
            placeholder="Choose the department manager."
          >
            <% departments.forEach((department)=>{ %>
            <option value="<%= department.id %>"
              ><%= department.department_title %></option
            >
            <% }) %>
          </select>
        </div>

        <button value="submit" type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
